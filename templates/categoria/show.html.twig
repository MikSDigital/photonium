{% extends 'base.html.twig' %}

{% block title %}Categoria{% endblock %}

{% block body %}
    <h1>Categoria</h1>

    <table class="ui table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorium.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ categorium.nombre }}</td>
            </tr>
            <tr>
                <th>Productos</th>
                <td>
                	<ul>
                	{% for item in categorium.productos %}
                	<li>{{ item.nombre }}</li>
                	{% endfor %}
                	</ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a class="ui primary button" href="{{ path('categoria_index') }}">Volver</a>
    <a class="ui button" href="{{ path('categoria_edit', {'id': categorium.id}) }}">Editar</a>
{#
    {{ include('categoria/_delete_form.html.twig') }}
#}
{% endblock %}