{% extends 'base.html.twig' %}

{% block body %}
<h1 class="ui header">Novedad</h1>

<div class="ui raised segment">
	{{ form_start(form) }}
	{{ form_widget(form) }}
	<button class="ui primary button" formnovalidate>
		{{ button_label|default('Guardar') }}
	</button>
	<a class="ui button" href="{{ path('novedad_index') }}">Volver</a>
	<a id="ajax" class="ui yellow button" href="#">Ajax call</a>
	{{ form_end(form) }}
</div>
{% endblock %}

{% block javascripts %}
<script type="text/javascript">
	$('#ajax').on('click', function(event){
		$.ajax({
			url: '{{ path('novedad_new')}}',
			type: 'POST',
			dataType: 'json',
			async: true,
			success: function(data, status){
				alert('returned: ' + data);
				},
			error: function(xhr, textStatus, errorTrhown){
				alert('ajax failed :-(');
				},
		});
	});
</script>
{% endblock %}
