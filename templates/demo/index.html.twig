{% extends 'base.html.twig' %}

{% block title %}Demo index{% endblock %}

{% block body %}
    <h1>Demo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demo in demos %}
            <tr>
                <td>{{ demo.id }}</td>
                <td>{{ demo.fecha ? demo.fecha|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ demo.descripcion }}</td>
                <td>
                    <a href="{{ path('demo_show', {'id': demo.id}) }}">show</a>
                    <a href="{{ path('demo_edit', {'id': demo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('demo_new') }}">Create new</a>
{% endblock %}