{% block javascripts %}
<script>

	$(document).ready(
			function() {

				$('.button.follow').state({
					text : {
						inactive : 'Follow',
						active : 'Following'
					}
				});

				$('.example .message .close, .example .html .message .close')
						.on(
								'click',
								function() {
									$(this).closest('.message').transition(
											'scale out');
								});

				$('.demo .example .menu a.item').on(
						'click',
						function() {
							if (!$(this).hasClass('dropdown')) {
								$(this).addClass('active').closest('.ui.menu')
										.find('.item').not($(this))
										.removeClass('active');
							}
						});

			});
</script>

