{% extends '@ExpandedCollection/Form/fields.html.twig' %}

{%- block checkbox_widget -%}
<div class="ui toggle checkbox">
        <input type="checkbox" {{ block('widget_attributes') }}
        {% if value is defined %} 
        	value="{{ value }}"
        {% endif %}
        {% if checked %} 
        	checked="checked"
        {% endif %} />
</div>
{%- endblock checkbox_widget -%}
