{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
<div class="ui negative error message">
	{{ error.messageKey|trans(error.messageData, 'security') }}
</div>
{% endif %}

<div class="ui raised segment form">
	<h2 class="ui dividing header">
		<i class="user icon"></i>
		<div class="content">Inicio de sesi&oacuten</div>
	</h2>

	<form action="{{ path("fos_user_security_check") }}" method="post">
		{% if csrf_token %}
		<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
		{% endif %}

		<div class="required field">
			<label for="username">{{ 'security.login.username'|trans }}</label>
			<input
				class="ui input" type="text" id="username" name="_username"
				value="{{ last_username }}" required="required"
				autocomplete="username" />
		</div>

		<div class="required field">
			<label for="password">{{ 'security.login.password'|trans }}</label>
			<input class="ui input" type="password" id="password" name="_password"
				required="required" autocomplete="current-password" />
		</div>

		<div class="ui divider"></div>
		<input
			formnovalidate class="ui button primary" type="submit" id="_submit"
			name="_submit" value="{{ 'security.login.submit'|trans }}" />
			<a class="ui disabled button" href="#">Olvide mi clave</a>
	</form>
</div>