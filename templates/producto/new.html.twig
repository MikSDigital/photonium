{% extends 'base.html.twig' %}

{% block title %}
New Producto
{% endblock %}

{% block body %}
<h1>Nuevo Producto</h1>

{{ include('producto/_form.html.twig') }}

{% endblock %}

{% block javascripts %}
<script type="text/javascript">
	$('.ui.dropdown').dropdown({
		allowAdditions : true
	});

	$('not.ui.form').form({
		on : 'blur',
		fields : {
			producto_nombre : {
				identifier : 'producto_nombre',
				rules : [ {
					type : 'empty',
					prompt : 'Please enter some text'
				} ]
			},
			producto_precio : {
				identifier : 'producto_precio',
				rules : [ {
					type : 'decimal',
					prompt : 'Please enter some text'
				} ]
			},
		}
	});

	$("#test").click(function() {
		$(".test").modal('show');
	});
	$(".test").modal({
		closable : true
	});
</script>


{% endblock %}